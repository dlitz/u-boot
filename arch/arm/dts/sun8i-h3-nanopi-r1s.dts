#include "sun8i-h3-nanopi.dtsi"
#include <dt-bindings/leds/common.h>

/* XXX FIXME(dlitz) For u-boot v2022.10 */
#ifndef CLK_OSC32K_FANOUT
# define CLK_OSC32K_FANOUT 1
#endif

/ {
	model = "FriendlyElec NanoPi-R1S-H3";
	compatible = "friendlyelec,nanopi-r1s-h3", "allwinner,sun8i-h3";

	aliases {
		serial1 = &uart1;
		ethernet0 = &emac;
		ethernet1 = &wifi;
		ethernet2 = &usb_ethernet;
	};

	reg_vcc_dram: vcc-dram {
		compatible = "regulator-fixed";
		regulator-name = "vcc-dram";
		regulator-min-microvolt = <1500000>;
		regulator-max-microvolt = <1500000>;
		regulator-always-on;
		regulator-boot-on;
		enable-active-high;
		gpio = <&r_pio 0 9 GPIO_ACTIVE_HIGH>; /* PL9 */
		vin-supply = <&reg_vcc5v0>;
	};

	reg_vcc2v5: vcc2v5 {
		compatible = "regulator-fixed";
		regulator-name = "vcc2v5";
		regulator-min-microvolt = <2500000>;
		regulator-max-microvolt = <2500000>;
	};

	reg_gmac_3v3: gmac-3v3 {
		compatible = "regulator-fixed";
		regulator-name = "gmac-3v3";
		regulator-min-microvolt = <3300000>;
		regulator-max-microvolt = <3300000>;
		startup-delay-us = <100000>;
		enable-active-high;
		gpio = <&pio 3 6 GPIO_ACTIVE_HIGH>; /* PD6 */
	};

	reg_vdd_cpux: gpio-regulator {
		compatible = "regulator-gpio";
		regulator-name = "vdd-cpux";
		regulator-type = "voltage";
		regulator-boot-on;
		regulator-always-on;
		regulator-min-microvolt = <1100000>;
		regulator-max-microvolt = <1300000>;
		regulator-ramp-delay = <50>;
		gpios = <&r_pio 0 6 GPIO_ACTIVE_HIGH>; /* PL6 */
		gpios-states = <0x1>;
		states = <1100000 0x0>,
			 <1300000 0x1>;
		vin-supply = <&reg_vcc5v0>;
	};

	wifi_pwrseq: wifi_pwrseq {
		compatible = "mmc-pwrseq-simple";
		reset-gpios = <&r_pio 0 7 GPIO_ACTIVE_LOW>; /* PL7 */
		clocks = <&rtc CLK_OSC32K_FANOUT>;
		clock-names = "ext_clock";
	};

	leds {
		led-0 {
			label = "nanopi:red:status";
			function = LED_FUNCTION_STATUS;
			color = <LED_COLOR_ID_RED>;
//			gpios = <&pio 0 10 GPIO_ACTIVE_HIGH>;	/* PA10 */
//			status = "disabled";	/* DEBUG FIXME(dlitz) */  
		};

		led-1 {
			status = "disabled";
		};


	/* DEBUG FIXME(dlitz) */  // Stealing WAN LED for gpio-fan
#if 1
		led-2 {
			label = "nanopi:green:wan";
			function = LED_FUNCTION_WAN;
			color = <LED_COLOR_ID_GREEN>;
			gpios = <&pio 6 11 GPIO_ACTIVE_HIGH>; /* PG11 */
		};

		led-3 {
			label = "nanopi:green:lan";
			function = LED_FUNCTION_LAN;
			color = <LED_COLOR_ID_GREEN>;
			gpios = <&pio 0 9 GPIO_ACTIVE_HIGH>; /* PA9 */
		};
#endif

		// TODO: SMT fan connector
			// DEBUG FIXME(dlitz) - This is the fan port
#if 0
		led-4 {
			label = "nanopi::fan";
			function = "fan";	// XXX LED_FUNCTION_*
			gpios = <&r_pio 0 5 GPIO_ACTIVE_HIGH>;	/* PL5 */
		};
#endif
	};

#if 0
	fan0: gpio_fan {
		compatible = "gpio-fan";
		label = "GPIO fan";
		//gpios = <&r_pio 0 5 GPIO_ACTIVE_HIGH>;	/* PL5 */
		gpios = <&pio 6 11 GPIO_ACTIVE_HIGH>, /* PG11 - WAN LED*/
			<&pio 0 9 GPIO_ACTIVE_HIGH>; /* PA9 - LAN LED*/
		#cooling-cells = <2>;
		gpio-fan,speed-map = <0 0>, <3000 1>, <6000 2>, <9000 3>;
		alarm-gpios = <&pio 0 10 GPIO_ACTIVE_HIGH>;	/* PA10 */
	};
#else
	fan0: gpio_fan {
		compatible = "gpio-fan";
		label = "GPIO fan";
		gpios = <&r_pio 0 5 GPIO_ACTIVE_HIGH>;	/* PL5 */
		#cooling-cells = <2>;
		gpio-fan,speed-map = <0 0>, <10000 1>;
	};
#endif


	reserved-memory {
		#address-cells = <1>;
		#size-cells = <1>;
#if 1
		brom {	/* entire bootrom */
			compatible = "nvmem-rmem";
			reg = <0xffff0000 0x10000>;
		};
#elif 0
		n-bootrom {	/* non-secure bootrom */
			compatible = "nvmem-rmem";
			reg = <0xffff0000 0x8000>;
		};
		s-bootrom {	/* "secure" bootrom (technically should overlap n-bootrom) */
			compatible = "nvmem-rmem";
			reg = <0xffff8000 0x8000>;
		};
#endif
	};

};

&cpu0 {
	cpu-supply = <&reg_vdd_cpux>;
};

&ehci1 {
	#address-cells = <1>;
	#size-cells = <0>;

	status = "okay";

	usb_ethernet: ethernet@1 {	/* hard-wired USB ethernet device */
		compatible = "usbbda,8153";
		reg = <1>;
	};
};

&ehci2 {
	status = "okay";
};

&emac {
	pinctrl-names = "default";
	pinctrl-0 = <&emac_rgmii_pins>;
	phy-supply = <&reg_gmac_3v3>;
	phy-handle = <&ext_rgmii_phy>;
	phy-mode = "rgmii-id";

	//nvmem-cells = <&eeprom_mac_address_writable>;
	//nvmem-cells = <&eeprom_mac_address>;
	//nvmem-cells = <&spi_mac_address>;
	//nvmem-cell-names = "mac-address";

	status = "okay";
};

&external_mdio {
	ext_rgmii_phy: ethernet-phy@7 {
		compatible = "ethernet-phy-ieee802.3-c22";
		reg = <7>;
		reset-gpios = <&pio 3 14 GPIO_ACTIVE_LOW>; /* PD14 */
		phy-io-supply = <&reg_vcc2v5>;	// Is this the correct spot?  Check for  [  +0.000235] dwmac-sun8i 1c30000.ethernet: supply phy-io not found, using dummy regulator
	};
};

// normally-unpopulated 8-SOIC footprint designated U14
&spi0 {
	status = "okay";

	spiflash: flash@0 {
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "mxicy,mx25l12805d", "jedec,spi-nor";
		reg = <0>;
		//status = "disabled";
		status = "okay";

		//vdd-supply = <&reg_vcc3v3>;	// DTC_CHK complains about this

		spi-max-frequency = <104000000>;
		m25p,fast-read;

		partitions {
			compatible = "fixed-partitions";
			#address-cells = <1>;
			#size-cells = <1>;

#if 0
			spl@0 {
				reg = <0x0 0x8000>;	/* 32KiB */
			};

			u-boot@8000 {
				reg = <0x8000 0xe8000>;	/* 928 KiB */
			};
#else
			u-boot-sunxi-with-spl@0 {
				reg = <0x0 0xf0000>;	/* 960 KiB */
			};
#endif

			u-boot-env@f0000 {
				reg = <0xf0000 0x10000>;	/* 64 KiB */
			};

// TODO: random-seed?

			//partition@1 {
			//partition-other {
			//other@8000 {
			/*
			art: art@8000 {
				compatible = "nvmem-cells";
				reg = <0x8000 0xff8000>;
				#address-cells = <1>;
				#size-cells = <1>;
				spi_mac_address: ethernet-address@0 {
					reg = <0x0 0x6>;
				};
			};
			*/
		};
	};
};

&mmc1 {
	vmmc-supply = <&reg_vcc3v3>;
	vqmmc-supply = <&reg_vcc3v3>;
	mmc-pwrseq = <&wifi_pwrseq>;
	bus-width = <4>;
	non-removable;
	status = "okay";

	/* compatible with rtl8189/ap6256 */
	wifi: wifi@1 {
		reg = <1>;
		compatible = "brcm,bcm4329-fmac";
		interrupt-parent = <&pio>;
		interrupts = <6 10 IRQ_TYPE_LEVEL_HIGH>; /* PG10 / EINT10 */
		// TODO(dlitz): Should the above be IRQ_TYPE_LEVEL_LOW like on other devices?
		interrupt-names = "host-wake";
	};
};

&ohci1 {
	status = "okay";
};

&ohci2 {
	status = "okay";
};

&uart1 {
	pinctrl-names = "default";
	pinctrl-0 = <&uart1_pins>;
	status = "okay";
};

&uart3 {
	pinctrl-names = "default";
	pinctrl-0 = <&uart3_pins>, <&uart3_rts_cts_pins>;
	uart-has-rtscts;
	status = "okay";

	bluetooth {
		compatible = "brcm,bcm43438-bt";
		clocks = <&rtc CLK_OSC32K_FANOUT>;
		clock-names = "lpo";
		vbat-supply = <&reg_vcc3v3>;
		vddio-supply = <&reg_vcc3v3>;
		device-wakeup-gpios = <&pio 0 8 GPIO_ACTIVE_HIGH>; /* PA8 */
		host-wakeup-gpios = <&pio 0 7 GPIO_ACTIVE_HIGH>; /* PA7 */  /* deprecated */
		shutdown-gpios = <&pio 6 13 GPIO_ACTIVE_HIGH>; /* PG13 */
		interrupt-parent = <&pio>;
		interrupts = <0 7 IRQ_TYPE_LEVEL_HIGH>; /* PA7 / EINT7 */
		interrupt-names = "host-wakeup";
	};
};

&usb_otg {
	status = "okay";
	dr_mode = "otg";
};

&usbphy {
	usb0_id_det-gpios = <&pio 6 12 GPIO_ACTIVE_HIGH>; /* PG12 */
	status = "okay";
};

&i2c0 {
	status = "okay";
	clock-frequency = <400000>;

	eeprom@51 {
		/* Microchip 24AA025E48T-I/OT */
		compatible = "microchip,24c02", "atmel,24c02";
		reg = <0x51>;
		pagesize = <16>;
		vcc-supply = <&reg_vcc3v3>;
		label = "i2c-eeprom";

		//read-only;
		#address-cells = <1>;
		#size-cells = <1>;

		eeprom_mac_address_writable: mac-address@0 {
			reg = <0x0 0x6>;
		};
		eeprom_mac_address: mac-address@fa {
			reg = <0xfa 0x6>;
		};
	};
};

&pio {
	vcc-pa-supply = <&reg_vcc3v3>;	// VCC_IO
	vcc-pc-supply = <&reg_vcc3v3>;	// VCC_IO
	vcc-pd-supply = <&reg_vcc2v5>;	// VCC_PD
	vcc-pe-supply = <&reg_vcc3v3>;	// VCC_IO
	vcc-pf-supply = <&reg_vcc3v3>;	// VCC_IO
	vcc-pg-supply = <&reg_vcc3v3>;	// VCC_PG
};

&r_pio {
	vcc-pl-supply = <&reg_vcc3v3>;	// VCC_IO
};

